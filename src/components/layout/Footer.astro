---
import { CONTACT, SOCIALS } from "../../lib/constants/home";
import { MENU_ITEMS } from "../../lib/routes";
---

<footer class="bg-gunmetal text-light px-8 py-10">
  <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
    <div>
      <h3 class="t-button mb-2 text-lion">Aurum</h3>
      <p>High-end culinary experience</p>
    </div>
    <div>
      <h3 class="t-button mb-2">Links</h3>
      <ul class="flex flex-col gap-2">
        {MENU_ITEMS.map(item => (
          <li>
            <a href={item.path} class="hover:text-lion transition-colors">
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
    <div>
      <h3 class="t-button mb-2">Contact</h3>
      <ul class="flex flex-col gap-2">
        {CONTACT.map(({ icon: Icon, value }) => (
          <li class="flex items-center gap-2">
            <Icon className="w-5 h-5 text-light" />
            <span>{value}</span>
          </li>
        ))}
      </ul>
    </div>
    <div>
      <h3 class="t-button mb-2">Hours</h3>
      <p>Monday to Friday: 12:00 PM - 11:00 PM</p>
      <p>Saturday & Sunday: 12:00 PM - 12:00 AM</p>
    </div>
    <div>
      <h3 class="t-button mb-2">Follow Us</h3>
      <ul class="flex gap-4">
        {SOCIALS.map(({ icon: Icon, href }) => (
          <li>
            <a href={href} target="_blank" rel="noopener noreferrer">
              <Icon className="w-6 h-6 text-light hover:text-lion transition-colors" />
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
  <div class="mt-8 border-t border-dark pt-4 text-center t-small text-light">
    Â© {new Date().getFullYear()} Aurum. All rights reserved.
  </div>
</footer>
